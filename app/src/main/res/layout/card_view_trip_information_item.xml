<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    card_view:cardCornerRadius="1dp"
    card_view:contentPadding="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/departure_card_view_trip"
            android:text="@string/welcome_message"
            android:lines="1"
            android:textSize="12sp"
            android:padding="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/departure_card_view_trip"
            android:weightSum="2"
            android:padding="5dp"
            android:id="@+id/layout_driver_card_view_trip">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/displacement_card_view_trip"
                android:text="@string/welcome_message"
                android:lines="1"
                android:textSize="12sp"
                android:padding="0dp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:text="@string/welcome_message"
                android:lines="1"
                android:textSize="10sp"
                android:id="@+id/driver_card_view_trip"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/layout_driver_card_view_trip"
            android:weightSum="2"
            android:padding="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/welcome_message"
                android:lines="1"
                android:textSize="10sp"
                android:layout_gravity="start"
                android:gravity="start"
                android:layout_marginEnd="5dp"
                android:id="@+id/date_and_time_card_view_trip"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="@string/welcome_message"
                android:lines="1"
                android:textSize="10sp"
                android:id="@+id/contact_card_view_trip"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>