<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="1dp"
    card_view:contentPadding="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="16"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:baselineAligned="false"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:gravity="center"
            android:background="@drawable/button_background_two"
            android:layout_marginEnd="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seat"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:id="@+id/seat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:text="30"
                android:layout_below="@id/seat"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:id="@+id/card_view_passenger_seat_passenger_information"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:padding="3dp"
                android:text="Ayokunle Paul"
                android:textStyle="bold"
                android:id="@+id/card_view_passenger_name_passenger_information"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view_passenger_name_passenger_information"
                android:id="@+id/card_view_passenger_sex_container"
                android:orientation="horizontal">

                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="M"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_background_three"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/card_view_passenger_sex_passenger_information"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:text="07067274441"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:id="@+id/card_view_passenger_phone_number_passenger_information"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view_passenger_sex_container"
                android:padding="0dp"
                android:textSize="10sp"
                android:text="@string/address_card_view"
                android:lines="1"
                android:id="@+id/card_view_passenger_address_passenger_information"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next of kin"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_marginTop="0dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oladokun Olaniyi"
                android:layout_gravity="end"
                android:gravity="end"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:id="@+id/card_view_passenger_next_of_kin_passenger_information"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="07067274441"
                android:layout_gravity="end"
                android:gravity="end"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:id="@+id/card_view_passenger_next_of_kin_phone_number_passenger_information"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>